    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag("LOGO_NEWCOLOUR@remibuscot.png") %>
    <% end %>

    <div>
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>

          <%= link_to user_path(@user) do %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/rbuscot01", class: "avatar dropdown-toggle" %>
            <% end %>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
