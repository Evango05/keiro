<% index = 0 %>
<% @itineraries.each do |itinerary|%>
  <%= link_to itinerary_path(itinerary), class: "text-deco" do %>
    <% if !itinerary.selected_hotspot_ids.empty? %>
      <div class='container-index-itineraries'>
        <div class='container-index-itineraries-2'>

          <div class='item-index-itineraries'>

          <%= image_tag @maps[index], class: "map-image" %>
          <% index += 1 %>
          </div>

          <div>
            <p style='color: white; font-weight: 500;'><%= itinerary.created_at.to_date.strftime("Tour du %d.%m.%Y") %></p>
            <p style='color: white; font-weight: 300;'><%= itinerary.duration %> minutes</p>
            <p style='color: white; font-weight: 300;'><%= itinerary.length %> kilomÃ¨tres</p>
          </div>

            <div class='container-image'>
              <% hotspost_ids = itinerary.selected_hotspot_ids.first(2) %>
              <% hotspot_1 = Hotspot.find(hotspost_ids.first.to_i) %>
              <% hotspot_2 = Hotspot.find(hotspost_ids.last.to_i) %>
              <div class="image-top" style="background-image: url(<%=
               cl_image_path(hotspot_1.photo.key, {secure: true})  %>);">
              </div>
              <div class="image-bottom" style="background-image: url(<%= cl_image_path(hotspot_2.photo.key, {secure: true})   %>);">
              </div>
            </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
